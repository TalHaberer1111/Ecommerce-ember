
{{#if addNewProduct}}
  <h1>Add a new product</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Product name:</label>
          {{input value=title id="title"}}
        </div>

        <div class="form-group">
          <label for="image">Image url:</label>
          {{input value=image id="image"}}
        </div>

        <div class="form-group">
          <label for="description">Product Description:</label>
          {{input value=description id="description"}}
        </div>

        <div class="form-group">
          <label for="price">Cost</label>
          {{input value=price id="price"}}
        </div>

        <button class="btn btn-default" {{action 'saveProduct'}}>Put this Product Up for Sale</button>
        <button class="btn btn-warning"{{action 'hideNewProductForm'}}>Cancel</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-default" {{action 'productFormShow'}}>Add New Product</button>
{{/if}}
